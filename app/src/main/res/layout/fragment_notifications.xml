<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/botonBorrarTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrar_todas_las_tareas"
        app:icon="@drawable/baseline_report_problem_24" />

    <Button
        android:id="@+id/botonBorrarCompletadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrar_todas_las_tareas_completadas"
        app:icon="@drawable/baseline_report_problem_24" />
</LinearLayout>